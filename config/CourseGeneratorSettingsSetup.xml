<?xml version="1.0" encoding="UTF-8"?>


<!-- 
	All the course generator settings can be setup here.
	For documentation look up the CpSettingUtil.lua.
-->

<Settings prefixText="CP_vehicle_courseGeneratorSetting_">
	<!--Basic settings-->
	<SettingSubTitle title="basic">
		<Setting classType="AIParameterSettingList" name="workWidth" min="0.5" max="50" incremental="0.1" unit="2" setDefault="setAutomaticWorkWidthAndOffset" onChangeCallback="cpShowWorkWidth" isVisible="isWorkWidthSettingVisible"/>
		<Setting classType="AIParameterSettingList" name="multiTools" min="1" max="5" default="1"/>
		<Setting classType="AIParameterSettingList" name="numberOfHeadlands" min="0" max="40"/>
	</SettingSubTitle>
	<!-- Only active with one or more headlands -->
	<!--Headland settings-->
	<SettingSubTitle title="headland" isVisible="hasHeadlandsSelected">	
		<Setting classType="AIParameterSettingList" name="startOnHeadland">
			<Values>
				<Value name="HEADLAND_START_ON_HEADLAND">1</Value>
				<Value name="HEADLAND_START_ON_UP_DOWN_ROWS">2</Value>
			</Values>
			<Texts>
				<Text>on_headland</Text>
				<Text>up_down_rows</Text>
			</Texts>
		</Setting>
		<Setting classType="AIParameterBooleanSetting" name="sharpenCorners" defaultBoolean="false"/>
		<Setting classType="AIParameterSettingList" name="headlandsWithRoundCorners" min="0" max="50" default="1"/>
		<Setting classType="AIParameterSettingList" name="fieldCornerRadius" min="1" max="30" default="1"/>
		<Setting classType="AIParameterBooleanSetting" name="headlandClockwise" isExpertModeOnly="true" defaultBoolean="true">
			<Texts>
				<Text>counterclockwise</Text>
				<Text>clockwise</Text>
			</Texts>
		</Setting>
		<Setting classType="AIParameterSettingList" name="headlandOverlapPercent" min="0" max="25" default="7" unit="4" isExpertModeOnly="true"/>
		<Setting classType="AIParameterSettingList" name="fieldMargin" min="-5" max="6" default="0" incremental="0.2" isExpertModeOnly="true"/>
	</SettingSubTitle>
	<!--Center settings-->
	<SettingSubTitle title="center">
		<Setting classType="AIParameterSettingList" name="centerMode">
			<Values>
				<!-- These must match CourseGenerator.RowPattern.* constants -->
				<Value name="ROW_PATTERN_ALTERNATING">1</Value>
				<Value name="ROW_PATTERN_SPIRAL">3</Value>
				<Value name="ROW_PATTERN_LANDS">4</Value>
				<Value name="ROW_PATTERN_RACETRACK">5</Value>
			</Values>
			<Texts>
				<Text>up_down</Text> 
				<Text>skip</Text>
				<Text>spiral</Text>
				<Text>lands</Text>
				<Text>circular</Text>
			</Texts>
		</Setting>
		<Setting classType="AIParameterBooleanSetting" name="centerClockwise" isExpertModeOnly="true" defaultBoolean="true">
			<Texts>
				<Text>counterclockwise</Text>
				<Text>clockwise</Text>
			</Texts>
		</Setting>
		<Setting classType="AIParameterBooleanSetting" name="evenRowWidth" defaultBoolean="false"/>
		<Setting classType="AIParameterBooleanSetting" name="useBaseLineEdge" defaultBoolean="false"/>
		<Setting classType="AIParameterBooleanSetting" name="reverse" defaultBoolean="false"/>
		<Setting classType="AIParameterBooleanSetting" name="autoRowAngle" isExpertModeOnly="true" defaultBoolean="false">
			<Texts>
				<Text>automatic</Text>
				<Text>manual</Text>
			</Texts>
		</Setting>
		<Setting classType="AIParameterSettingList" name="rowsToSkip" min="0" max="6"/>
		<Setting classType="AIParameterSettingList" name="rowsPerLand" min="2" max="24" default="6"/>
		<Setting classType="AIParameterSettingList" name="manualRowAngleDeg" min="0" max="175" incremental="5" unit="5" isExpertModeOnly="true"/>
	</SettingSubTitle>
	<!--Island settings-->
	<SettingSubTitle title="island">
		<Setting classType="AIParameterBooleanSetting" name="bypassIslands" defaultBoolean="true"/>
		<Setting classType="AIParameterSettingList" name="islandHeadlands" min="1" max="10" default="1"/>
		<Setting classType="AIParameterBooleanSetting" name="islandHeadlandClockwise" isExpertModeOnly="true" defaultBoolean="true">
			<Texts>
				<Text>counterclockwise</Text>
				<Text>clockwise</Text>
			</Texts>
		</Setting>
	</SettingSubTitle>
</Settings>
